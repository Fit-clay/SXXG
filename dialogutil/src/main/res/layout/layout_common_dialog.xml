<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_white_card_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="title"
                android:gravity="center"
                android:textSize="18sp"
                android:padding="5dp"
                android:textColor="@color/login_text"

                />
        <ImageView
            android:id="@+id/bt_common_dialog_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|end"
            android:paddingBottom="6dp"
            android:paddingTop="12dp"
            android:src="@drawable/ic_dialog_cancel"
            android:layout_alignParentRight="true"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_common_dialog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:lineSpacingExtra="3dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#dddddd"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bt_record_permission_dialog_concle"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/base_blue"
            android:textSize="16sp"
            android:visibility="gone"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dddddd" />
        <TextView
            android:id="@+id/bt_common_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/base_blue"
            android:textSize="16sp"
            android:layout_weight="1"
            />

    </LinearLayout>
    </LinearLayout>
</FrameLayout>